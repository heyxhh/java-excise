<configuration>
　　　<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
　　　　　 <encoder>
　　　　　　　　　<pattern>[%d{yyyy-MM-dd HH:mm:ss.SSS}] [level: %p] [Thread: %t] [Class:%c >> %L]: %m%n</pattern>
　　　　　 </encoder>
　　　</appender>

　　　<root level="INFO">
　　　　　　<appender-ref ref="STDOUT" />
　　　</root>
</configuration>